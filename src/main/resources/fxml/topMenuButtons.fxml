<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<FlowPane fx:id="topMenuButtons" alignment="TOP_CENTER" prefWidth="767.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.TopMenuButtonsController">
   <children>
      <Button accessibleRole="PARENT" maxHeight="100.0" maxWidth="200.0" mnemonicParsing="false" onAction="#openTickets" text="Tickets">
         <graphic>
            <ImageView accessibleRole="PARENT" fitHeight="43.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true" rotate="-45.0" translateX="-5.0">
               <image>
                  <Image url="@../images/tickets_button_icon.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="Arial" size="17.0" />
         </font>
         <FlowPane.margin>
            <Insets right="20.0" top="10.0" />
         </FlowPane.margin>
      </Button>
      <Button accessibleRole="PARENT" maxHeight="100.0" maxWidth="200.0" mnemonicParsing="false" onAction="#openFlights" text="Flights">
         <graphic>
            <ImageView fitHeight="48.0" fitWidth="56.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/flight_icon.png" />
               </image></ImageView>
         </graphic>
         <font>
            <Font name="Arial" size="17.0" />
         </font>
         <FlowPane.margin>
            <Insets right="20.0" top="10.0" />
         </FlowPane.margin></Button>
      <Button accessibleRole="PARENT" maxHeight="100.0" maxWidth="200.0" mnemonicParsing="false" onAction="#openPassengers" text="Passengers">
         <graphic>
            <ImageView fitHeight="48.0" fitWidth="57.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/passenger_icon.png" />
               </image>
            </ImageView>
         </graphic>
         <FlowPane.margin>
            <Insets right="20.0" top="10.0" />
         </FlowPane.margin></Button>
      <Button accessibleRole="PARENT" maxHeight="100.0" maxWidth="200.0" mnemonicParsing="false" onAction="#openAirlines" text="Alirlines">
         <graphic>
            <ImageView fitHeight="51.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/airline_icon.png" />
               </image>
            </ImageView>
         </graphic>
         <FlowPane.margin>
            <Insets right="20.0" top="10.0" />
         </FlowPane.margin></Button>
      <Button accessibleRole="PARENT" maxHeight="100.0" maxWidth="200.0" mnemonicParsing="false" onAction="#openAirports" text="AirPorts">
         <graphic>
            <ImageView fitHeight="49.0" fitWidth="122.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/airport_icon.png" />
               </image>
            </ImageView>
         </graphic>
         <FlowPane.margin>
            <Insets right="20.0" top="10.0" />
         </FlowPane.margin></Button>
   </children>
   <padding>
      <Insets bottom="25.0" top="25.0" />
   </padding>
</FlowPane>
