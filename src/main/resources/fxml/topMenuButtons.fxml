            <Font name="Arial" size="17.0" />
         </font>
         <FlowPane.margin>
            <Insets right="20.0" />
         </FlowPane.margin></Button>
      <Button accessibleRole="PARENT" mnemonicParsing="false" onAction="#openPassengers" prefHeight="60.0" prefWidth="160.0" text="Passengers">
         <graphic>
            <ImageView fitHeight="48.0" fitWidth="57.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/passenger_icon.png" />
               </image>
            </ImageView>
         </graphic>
         <FlowPane.margin>
            <Insets right="20.0" />
         </FlowPane.margin></Button>
      <Button accessibleRole="PARENT" mnemonicParsing="false" onAction="#openAirlines" prefHeight="60.0" prefWidth="160.0" text="Alirlines">
         <graphic>
            <ImageView fitHeight="51.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/airline_icon.png" />
               </image>
            </ImageView>
         </graphic>
         <FlowPane.margin>
            <Insets right="20.0" />
         </FlowPane.margin></Button>
      <Button accessibleRole="PARENT" mnemonicParsing="false" onAction="#openAirports" prefHeight="60.0" prefWidth="160.0" text="AirPorts">
         <graphic>
            <ImageView fitHeight="49.0" fitWidth="122.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/airport_icon.png" />
               </image>
            </ImageView>
         </graphic>
         <FlowPane.margin>
            <Insets />
         </FlowPane.margin></Button>
   </children>
   <padding>
      <Insets top="25.0" />
   </padding>
</FlowPane>
